<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="20dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/bookingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvBookingLocationName"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="126dp"
            android:padding="8dp"
            android:text="Hospital Name"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBookingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBookingLocationName"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:text="Date" />

        <TextView
            android:id="@+id/tvBookingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBookingLocationName"
            android:layout_toRightOf="@+id/tvBookingDate"
            android:padding="10dp"
            android:text="Time" />

        <TextView
            android:id="@+id/tv_BookingUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBookingLocationName"
            android:layout_toRightOf="@+id/tvBookingTime"
            android:padding="10dp"
            android:text="Unit : 1A-12-1"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_Cancel_Booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@color/red"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Cancel" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>